{
  "schema": {
    "type": "object",
    "properties": {
      "uischemaType": {
        "type":"string",
        "enum": ["VerticalLayout","HorizontalLayout"]
      },
      "rule": {
        "$ref":"rule.schema#/properties/rule"
      },
      "styles": {
        "$ref":"styles.schema#/properties/styles"
      },
      "changeToCategorization": {
        "type":"string"
      },
      "options": {
        "type": "object",
        "additionalProperties": {
          "type": "string"
        }
      },
      "_isBaseUiTool": {
        "type":"boolean"
      }
    }
  },
  "uischema": {

    "type": "Categorization",
    "elements": [

      {
        "type": "Category",
        "label": "Base",
        "elements": [
          {
            "scope": "#/properties/uischemaType",
            "type": "Control"
          }
        ]
      },

      {
        "type": "Category",
        "label": "Options",
        "elements": [
          {
            "scope": "#/properties/options",
            "type": "Control"
          }
        ]
      },

      {
        "type": "Category",
        "label": "Styles",
        "elements": [
          {
            "type": "LayoutRef",
            "$ref":"styles.uischema"
          }
        ]
      },

      {
        "type": "Category",
        "label": "Rule",
        "elements": [
          {
            "type": "LayoutRef",
            "$ref":"rule.uischema"
          }
        ]
      },


      {
        "type": "Category",
        "label": "Operations",
        "elements": [
          {
            "type": "Group",
            "label": "Change to Categorization",
            "elements": [
              {
                "type": "HorizontalLayout",
                "elements": [
                  {
                    "type": "Button",
                    "label": false,
                    "scope": "#/properties/changeToCategorization",
                    "options" : {
                      "label": "Change"
                    }
                  },
                  {
                    "type": "Text",
                    "text": "This converts the base UI schema into a Categorization UI schema. All current UI elements will be reseted!"
                  }
                ]
              }
            ]
          }
        ],
        "rule": {
          "effect": "SHOW",
          "condition": {
            "scope": "#/properties/_isBaseUiTool",
            "schema": {
              "const": true
            }
          }
        }
      }
    ]
  } ,
  "data": {}
}
