{
  "schema": {
    "type": "object",
    "properties": {
      "uischemaType": {
        "type":"string",
        "enum": ["VerticalLayout","HorizontalLayout"]
      },
      "rule": {
        "$ref":"rule.schema#/properties/rule"
      },
      "styles": {
        "$ref":"styles.schema#/properties/styles"
      },
      "operation": {
        "$ref":"operation.schema#/properties/operation"
      },
      "options": {
        "type": "object",
        "additionalProperties": {
          "type": "string"
        }
      }
    }
  },
  "uischema": {

    "type": "Categorization",
    "elements": [

      {
        "type": "Category",
        "label": "Base",
        "elements": [
          {
            "scope": "#/properties/uischemaType",
            "type": "Control"
          }
        ]
      },

      {
        "type": "Category",
        "label": "Options",
        "elements": [
          {
            "scope": "#/properties/options",
            "type": "Control"
          }
        ]
      },

      {
        "type": "Category",
        "label": "Styles",
        "elements": [
          {
            "type": "LayoutRef",
            "$ref":"styles.uischema"
          }
        ]
      },

      {
        "type": "Category",
        "label": "Rule",
        "elements": [
          {
            "type": "LayoutRef",
            "$ref":"rule.uischema"
          }
        ]
      },


      {
        "type": "Category",
        "label": "Operations",
        "elements": [
          {
            "type": "LayoutRef",
            "$ref":"operation.uischema"
          }
        ],
        "rule": {
          "effect": "SHOW",
          "condition": {
            "scope": "#/properties/operation/properties/_isBaseUiTool",
            "schema": {"const":true}
          }
        }
      }
    ]
  } ,
  "data": {}
}
