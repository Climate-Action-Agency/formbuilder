{
  "schema": {
    "type": "object",
    "properties": {
      "rule": {
        "$ref": "rule.schema#/properties/rule"
      },
      "labelAndI18n": {
        "$ref": "labelAndI18n.schema#/properties/labelAndI18n"
      },
      "styles": {
        "$ref": "styles.schema#/properties/styles"
      },
      "const": {
        "$ref": "const.schema#/properties/const"
      },
      "propertyName": {
        "type": "string",
        "pattern": "^[a-z]"
      }
    },
    "required": [
      "propertyName",
      "const"
    ]
  },
  "uischema": {
    "type": "Categorization",
    "elements": [
      {
        "type": "Category",
        "label": "Base",
        "elements": [
          {
            "type": "VerticalLayout",
            "elements": [
              {
                "type": "Control",
                "scope": "#/properties/propertyName"
              },
              {
                "type": "Group",
                "label": "Label & Description",
                "elements": [
                  {
                    "type": "VerticalLayout",
                    "elements": [
                      {
                        "type": "LayoutRef",
                        "$ref": "labelAndI18n.uischema"
                      }
                    ],
                    "rule": {
                      "effect": "SHOW",
                      "condition": {
                        "scope": "#/properties/_isUischema",
                        "schema": {
                          "const": true
                        }
                      }
                    }
                  },
                  {
                    "type": "VerticalLayout",
                    "elements": [
                      {
                        "type": "LayoutRef",
                        "$ref": "labelAndI18n.descriptionOnly.uischema"
                      }
                    ],
                    "rule": {
                      "effect": "SHOW",
                      "condition": {
                        "scope": "#/properties/_isUischema",
                        "schema": {
                          "const": false
                        }
                      }
                    }
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "type": "Category",
        "label": "Const",
        "elements": [
          {
            "type": "LayoutRef",
            "$ref": "const.uischema"
          }
        ]
      },
      {
        "type": "Category",
        "label": "Styles",
        "elements": [
          {
            "type": "LayoutRef",
            "$ref": "styles.uischema"
          }
        ]
      },
      {
        "type": "Category",
        "label": "Rule",
        "elements": [
          {
            "type": "LayoutRef",
            "$ref": "rule.uischema"
          }
        ]
      }
    ]
  },
  "data": {}
}
