{
  "type": "Categorization",
  "elements": [
    {
      "type": "Category",
      "label": "Base",
      "elements": [
        {
          "type": "HorizontalLayout",
          "elements": [
            {
              "scope": "#/properties/propertyName",
              "type": "Control",
              "rule": {
                "effect": "HIDE",
                "condition": {
                  "scope": "#/properties/_isProperty",
                  "schema": { "const": false}
                }
              }
            }
          ]
        },

        {
          "type": "Group",
          "label": "Label & Description",
          "elements": [
            {
              "type": "VerticalLayout",
              "elements": [
                {
                  "$ref": "labelAndI18n.ui.uischema"
                }
              ]
            }
          ],
          "options": {
            "collapsible": true
          }
        },

        {
          "type": "Group",
          "label": "Additional Properties",
          "elements": [
            {
              "scope": "#/properties/schema/properties/additionalProperties",
              "type": "Formbuilder",
              "options": {
                "schemaOnly": true,
                "baseTool": "schema",
                "baseToolProps": {
                  "prefixLabel": "Additional Properties"
                }
              }
            }
          ],
          "options": {
            "collapsible": true
          }
        }
      ]
    },

    {
      "type": "Category",
      "label": "Definitions",
      "elements": [
        { "$ref": "definitions.uischema" }
      ]
    },
    {
      "type": "Category",
      "label": "Validation",
      "elements": [
        { "$ref": "validation.uischema" }
      ]
    },
    {
      "type": "Category",
      "label": "Conditional",
      "elements": [
        {"$ref": "conditional.uischema" }
      ]
    },
    {
      "type": "Category",
      "label": "Composition",
      "elements": [
        {
          "type": "Group",
          "label": "oneOf",
          "elements": [
            {
              "type": "Formbuilder",
              "scope": "#/properties/schema/properties/oneOf",
              "options": {
                "schemaOnly": true,
                "baseTool": "schemaArray",
                "useKeyword": "oneOf",
                "baseToolProps": {
                  "keyword": "oneOf",
                  "prefixLabel": "oneOf:"
                }
              }
            }
          ],
          "options": {
            "collapsible": true
          }
        },

        {
          "type": "Group",
          "label": "allOf",
          "elements": [
            {
              "type": "Formbuilder",
              "scope": "#/properties/schema/properties/allOf",
              "options": {
                "schemaOnly": true,
                "baseTool": "schemaArray",
                "useKeyword": "allOf",
                "baseToolProps": {
                  "keyword": "allOf",
                  "prefixLabel": "allOf:"
                }
              }
            }
          ]
        }
      ]
    },

    {
      "type": "Category",
      "label": "Option & Styles",
      "elements": [
        {"$ref": "uiOptions.uischema" }
      ]
    },
    {
      "type": "Category",
      "label": "Rule",
      "elements": [
        { "$ref": "rule.uischema"  }
      ]
    }
  ]
}
